<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMahasiswa.UbahPasswordActivity"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password lama :"
        android:textColor="#000"
        android:textSize="19sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/etPasswordLama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan password lama"
        android:inputType="textPassword"
        android:textSize="19sp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password baru :"
        android:textColor="#000"
        android:textSize="19sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/etPassBaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan password baru"
        android:inputType="textPassword"
        android:textSize="19sp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifikasi password baru :"
        android:textColor="#000"
        android:textSize="19sp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/etVerifPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan ulang password baru"
        android:inputType="textPassword"
        android:textSize="19sp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnUbahPassword"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:text="Ubah password"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorAccent"
        android:background="@drawable/btn_shape"
        android:layout_height="50dp" />

</LinearLayout>